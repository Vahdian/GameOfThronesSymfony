{% extends 'base.html.twig' %}


{% block body %} <h1 style="text-align: center; margin:0; padding: 5rem;">CHARACTERS</h1> 

<table class="table table-dark table-striped" style="margin-bottom: 0;"">
    <thead>
        <tr>
            <th scope="col-1">#</th>
            <th scope="col">Name</th>
            <th scope="col">Picture</th>
            <th scope="col">Gender</th>
            <th scope="col">Status</th>
            <th scope="col">House</th>
            <th scope="col-1">Actor</th>
        </tr>
    </thead>
    <tbody>
        {% for key, character in characters %}

            <tr>
                <th scope="col">{{ key + 1 }}</th>
                <td>{{ character.name }}</td>
                <td>
                    <a href="/personaje/detalle/{{ key }}">
                        <img width="140px" src="{{ character.image }}" alt=""/>
                    </a>
                </td>

                {# Hacemos operadores ternarios para mostrar la info de genero en espa√±ol y y el estado igual #}

                <td>{{ character.gender == "male" ? "Hombre" : "Mujer" }}</td>
                <td>{{ character.alive == 1 ? "Vivo" : "Muerto" }}</td>
                <td>{{ character.house }}</td>
                <td>{{ character.actor }}</td>
            </tr>

        {% endfor %}
    </tbody>
</table>

{% endblock %}